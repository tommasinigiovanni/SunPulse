# =============================================================================
# SOLAR DASHBOARD - Variabili di Ambiente
# =============================================================================
# Copia questo file in .env e personalizza i valori

# =============================================================================
# DATABASE POSTGRESQL
# =============================================================================
POSTGRES_DB=solar_dashboard
POSTGRES_USER=postgres
POSTGRES_PASSWORD=secure_postgres_password_change_me
POSTGRES_PORT=5432

# =============================================================================
# DATABASE INFLUXDB (TIME SERIES)
# =============================================================================
INFLUXDB_DB=solar_metrics
INFLUXDB_ADMIN_USER=admin
INFLUXDB_ADMIN_PASSWORD=secure_influx_admin_password_change_me
INFLUXDB_USER=solar_user
INFLUXDB_USER_PASSWORD=secure_influx_user_password_change_me
INFLUXDB_PORT=8086

# =============================================================================
# REDIS CACHE
# =============================================================================
REDIS_PASSWORD=secure_redis_password_change_me
REDIS_PORT=6379

# =============================================================================
# MQTT MOSQUITTO
# =============================================================================
MQTT_PORT=1883
MQTT_WS_PORT=9001

# =============================================================================
# N8N AUTOMAZIONE
# =============================================================================
N8N_USER=admin
N8N_PASSWORD=secure_n8n_password_change_me
N8N_HOST=localhost
N8N_PORT=5678
N8N_WEBHOOK_URL=http://localhost:5678
N8N_DB=n8n

# =============================================================================
# ZCS AZZURRO PORTAL API
# =============================================================================
ZCS_API_URL=https://third.zcsazzurroportal.com:19003/
ZCS_API_AUTH=Zcs_YOUR_AUTH_TOKEN_HERE
ZCS_CLIENT_CODE=YOUR_CLIENT_CODE_HERE

# =============================================================================
# AUTH0 AUTHENTICATION
# =============================================================================
AUTH0_DOMAIN=your-domain.eu.auth0.com
AUTH0_CLIENT_ID=your_auth0_client_id
AUTH0_CLIENT_SECRET=your_auth0_client_secret

# =============================================================================
# APPLICAZIONE BACKEND
# =============================================================================
SECRET_KEY=your_super_secret_jwt_key_at_least_32_chars
DEBUG=False
ENVIRONMENT=production
BACKEND_PORT=8000

# =============================================================================
# APPLICAZIONE FRONTEND
# =============================================================================
REACT_APP_API_URL=http://localhost:8000
REACT_APP_MQTT_URL=ws://localhost:9001
FRONTEND_PORT=3000

# =============================================================================
# NGINX REVERSE PROXY
# =============================================================================
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443